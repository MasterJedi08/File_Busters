{
    "name" : "File Busters",
    "version" : "1.0",
    "manifest_version" : 2,
    "description": "Spam email detector",
    "content_scripts" : [
        {
            "matches" : ["https://mail.google.com/*"],
            "js" : ["content.js"]
        }
    ],
    "background": { 
        "scripts" : ["background.js"]
    },
    "browser_action": {
        "default_popup": "info_popup.html",
        "default_icon": "tempGhost.png"
    },
    "permissions": [ "activeTab" ],
    "icons": { 
        "16": "tempGhost.png",
        "48": "tempGhost.png",
       "128": "tempGhost.png" }
       
}
    